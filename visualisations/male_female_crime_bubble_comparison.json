{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Bubble chart: x=male population, y=female population, size=total crimes, color=state",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/mooi0010-69/datavis2/refs/heads/main/cleaned_data/male_pop_state.csv"
  },
  "transform": [
    {
      "calculate": "toNumber(datum.Male_Population)",
      "as": "Male_Population_Num"
    },
    {
      "lookup": "State",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/mooi0010-69/datavis2/refs/heads/main/cleaned_data/female_pop_state.csv"
        },
        "key": "State",
        "fields": ["Female_Population"]
      }
    },
    {
      "calculate": "toNumber(datum.Female_Population)",
      "as": "Female_Population_Num"
    },
    {
      "lookup": "State",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/mooi0010-69/datavis2/refs/heads/main/cleaned_data/state_total_crime.csv"
        },
        "key": "State",
        "fields": ["total crimes"]
      }
    },
    {
      "calculate": "toNumber(replace(datum['total crimes'], ',', ''))",
      "as": "Total_Crimes_Num"
    }
  ],
  "mark": "circle",
  "encoding": {
    "x": {"field": "Male_Population_Num", "type": "quantitative", "title": "Male Population"},
    "y": {"field": "Female_Population_Num", "type": "quantitative", "title": "Female Population"},
    "size": {
      "field": "Total_Crimes_Num",
      "type": "quantitative",
      "title": "Total Crimes",
      "scale": {"range": [100, 2000]}
    },
    "color": {"field": "State", "type": "nominal", "legend": {"title": "State"}},
    "tooltip": [
      {"field": "State", "type": "nominal"},
      {"field": "Male_Population_Num", "type": "quantitative"},
      {"field": "Female_Population_Num", "type": "quantitative"},
      {"field": "Total_Crimes_Num", "type": "quantitative"}
    ]
  }
}
