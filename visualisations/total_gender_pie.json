{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Gender Distribution of Crimes in Australia",
    "fontSize": 16,
    "fontWeight": "bold",
    "anchor": "middle"
  },
  "description": "Pie chart showing gender distribution of crimes in Australia with percentage tooltip and annotation",
  "width": 200,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/mooi0010-69/datavis2/refs/heads/main/cleaned_data/total_crimes_gender.csv"
  },
  "transform": [
    {
      "joinaggregate": [
        {
          "op": "sum",
          "field": "Crimes",
          "as": "TotalCrimes"
        }
      ]
    },
    {
      "calculate": "datum.Crimes / datum.TotalCrimes",
      "as": "Percentage"
    }
  ],
  "layer": [
    {
      "mark": {"type": "arc"},
      "encoding": {
        "theta": {"field": "Crimes", "type": "quantitative"},
        "color": {
          "field": "Gender",
          "type": "nominal",
          "scale": {
            "domain": ["Male", "Female"],
            "range": ["#9DCAEB", "#FF746C"]
          },
          "legend": {"title": "Gender"}
        },
        "tooltip": [
          {"field": "Gender", "type": "nominal"},
          {"field": "Crimes", "type": "quantitative", "format": ","},
          {"field": "Percentage", "type": "quantitative", "format": ".1%"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "bottom",
        "fontSize": 12,
        "fontWeight": "bold",
        "color": "#3399FF"
      },
      "encoding": {
        "x": {"value": 10},
        "y": {"value": 290},
        "text": {"value": "Mostly men commit\ncrimes in Australia"}
      }
    }
  ],
  "view": {"stroke": null}
}
