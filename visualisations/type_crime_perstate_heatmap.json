{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Heatmap of Types of Crimes per State",
    "anchor": "start",
    "fontSize": 18,
    "fontWeight": "bold"
  },
  "description": "Heatmap of crimes per state with adjustable color darkness",
  "width": 300,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/mooi0010-69/datavis2/refs/heads/main/cleaned_data/states_crime.csv"
  },
  "transform": [
    {
      "fold": ["New South Wales","Victoria","Queensland","South Australia","Western Australia","Tasmania","Northern Territory","Australian Capital Territory"], 
      "as": ["State", "Crimes"]
    },
    {
      "calculate": "toNumber(replace(datum.Crimes, ',', ''))",
      "as": "Crimes_Num"
    },
    {
      "calculate": "datum.Crimes_Num * (1 + 15 * colorMultiplier)", 
      "as": "Adjusted_Crimes"
    }
  ],
  "params": [
    {
      "name": "colorMultiplier",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 1,
        "step": 0.01,
        "name": "Adjust darkness"
      }
    }
  ],
  "mark": "rect",
  "encoding": {
    "x": {"field": "State", "type": "nominal", "title": "State"},
    "y": {"field": "Principal offence", "type": "nominal", "title": "Principal Offence"},
    "color": {
      "condition": {
        "test": "datum.Crimes_Num == 0",
        "value": "#ffffff"
      },
      "field": "Adjusted_Crimes",
      "type": "quantitative",
      "scale": {
        "domain": [1, 15000, 38500],
        "range": ["#ffffff", "#344678", "#03081a"]
      },
      "title": "Num of Crimes"
    },
    "tooltip": [
      {"field": "Principal offence"},
      {"field": "State"},
      {"field": "Crimes_Num", "type": "quantitative", "format": ","}
    ]
  }
}

